! ---------------!
! HIDPI SETTINGS !
! ---------------!

! dpi and font rendering
Xft.dpi:       192
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintfull

! cursor
Xcursor.theme: Adwaita
Xcursor.size: 32

! ------!
! FONTS !
! ------!

#define fnt1 NotoSans
#define fnt2 SourceCodePro
#define fntsz1 7
#define fntsz2 14

! its difficult to make general x settings for font sizes on a hidpi display
!  since a lot of applications are scaled (see .profile)

! ---------------------------------!
! FILE INCLUSIONS & COLORS SCHEMES !
! ---------------------------------!

#include ".xres/themes/solarized_dark_nord_bg_fg"
! #include ".xres/themes/solarized_dark_nord_bg_fg"
! #include ".xres/themes/solarized_dark_nord_bg_fg"

#include ".xres/colors"

! files for specific programs can be loaded from separate files like this
! rofi support for xresources will soon be deprecated though and should move to ~/.config/rofi
! #include ".xres/rofi"

! -------------------------------!
! POLYBAR AND ROFI COLOR SCHEMES !
! -------------------------------!

! custom resources used by polybar and rofi to make gradients
! leave bar.bg blank for transparent background for polybar

bar.width: 2880
bar.height: 35
bar.offsetx: 0
bar.offsety: 0

! rofi does not yet support xoffset as a variable import so this has to do for now
rofi.xoffset: 0
rofi.yoffset: 0

bar.paddinginner: 4.0
bar.paddingouter: 10.0
bar.barbg: #2E3440
! bar.barbg: #3B4252
! bar.barfg: #93a1a1
bar.barfg: blu2

! bar.bgg1: #b48ead 
! bar.bgg2: #b48ead 
! bar.bgg3: #5e81ac
! bar.bgg4: #ebcb8b
! bar.bgg5: #d08770 
! bar.bgg6: #bf616a

bar.bgg1: #2E3440
bar.bgg2: #3B4252
bar.bgg3: #434C5E
bar.bgg4: #4C566A
bar.bgg5: #546076 
bar.bgg6: #5C6A82

! ----------------------------!
! ADDITIONAL CUSTOM RESOURCES !
! ----------------------------!

! these additional custom resources could be in external files as well for easy switching

excol.accent: #8FBCBB
excol.bg1: blk
excol.bg2: bg
excol.fg1: fg
excol.fg2: wht2
excol.redish: red
excol.font1: fnt1
excol.fontsz1: fntsz1