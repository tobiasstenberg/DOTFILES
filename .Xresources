! ---------------!
! HIDPI SETTINGS !
! ---------------!

! dpi and font rendering
Xft.dpi:       192
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintfull

! cursor
Xcursor.theme: Adwaita
Xcursor.size: 32

! ------!
! FONTS !
! ------!

#define fnt1 NotoSans
#define fnt2 SourceCodePro
#define fntsz1 7
#define fntsz2 14

! ---------------------------------!
! FILE INCLUSIONS & COLORS SCHEMES !
! ---------------------------------!

! #include ".xres/themes/nord"
! #include ".xres/themes/solarized_dark"
! #include ".xres/colors"
! #include ".xres/themes/kasugano"
! 
#include ".xres/wip"

! files for specific programs can be loaded from separate files like this
! rofi support for xresources will soon be deprecated though and should move to ~/.config/rofi
! #include ".xres/rofi"

! -------------------------------!
! POLYBAR AND ROFI COLOR SCHEMES !
! -------------------------------!

! custom resources used by polybar and rofi to make gradients
! leave bar.bg blank for transparent background for polybar

bar.width: 2880
bar.height: 35
bar.offsetx: 0
bar.offsety: 0

! rofi does not yet support xoffset as a variable import so this has to do for now
rofi.xoffset: 0
rofi.yoffset: 0

bar.paddinginner: 5.0
bar.paddingouter: 10.0

! leave barbg empty for transparent background
! bar.barbg: 
bar.barbg: #151A1E
bar.barfg: #A7A7A7

bar.bgg1: #151A1E
bar.bgg2: #151A1E
bar.bgg3: #151A1E
bar.bgg4: #151A1E
bar.bgg5: #151A1E
bar.bgg6: #151A1E

! ----------------------------!
! ADDITIONAL CUSTOM RESOURCES !
! ----------------------------!

! these additional custom resources could be in external files as well for easy switching

excol.accent: #deaf64
excol.border: #1a1d26
excol.borderaccent: #384461
! excol.borderaccent: #506070
excol.bg1: blk
excol.bg2: bg
excol.fg1: fg
excol.fg2: wht2
excol.redish: red
excol.font1: fnt1
excol.fontsz1: fntsz1
